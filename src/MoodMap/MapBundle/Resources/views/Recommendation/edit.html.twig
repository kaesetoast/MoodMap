{% extends "MoodMapMapBundle:Recommendation:base.html.twig" %}
{% block body %}

<div class="page-header">
    <h1>Edit Recommendation</h1>
</div>

<form class="form-horizontal" action="{{ path('admin_recommendation_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <fieldset>
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button class="btn btn-primary" type="submit">Edit</button>
        </div>
    </fieldset>
</form>

{% endblock %}

{% block subnavi %}
<li>
    <a href="{{ path('admin_recommendation') }}">
        <i class="icon-th-list"></i> List Recommendations
    </a>
</li>
<li>
    <a href="{{ path('admin_recommendation_new') }}">
        <i class="icon-pencil"></i> Create a new Recommendation
    </a>
</li>
{% endblock %}