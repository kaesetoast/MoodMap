{% extends "MoodMapMapBundle:Recommendation:base.html.twig" %}
{% block body %}

<div class="page-header">
    <h1>Recommendation creation</h1>
</div>

<form class="form-horizontal" action="{{ path('admin_recommendation_create') }}" method="post" {{ form_enctype(form) }}>
	<fieldset>
		{{ form_widget(form) }}
		<div class="form-actions">
			<button class="btn btn-primary" type="submit">Create</button>
		</div>
	</fieldset>
</form>

{% endblock %}

{% block subnavi %}
<li>
    <a href="{{ path('admin_recommendation') }}">
        <i class="icon-th-list"></i> List Recommendations
    </a>
</li>
<li class="active">
    <a href="{{ path('admin_recommendation_new') }}">
        <i class="icon-white icon-pencil"></i> Create a new Recommendation
    </a>
</li>
{% endblock %}